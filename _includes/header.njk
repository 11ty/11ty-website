<header class="elv-layout elv-layout-full elv-header{% if headerClass %} {{ headerClass }}{% endif %}">
	<a href="{% if logoLink %}{{ logoLink | url }}{% else %}/{% endif %}" class="elv-hero elv-externalexempt"><img src="{{ "/img/logo.svg" | url }}" onerror="this.src='{{ "/img/logo.png" | url }}'" alt="11ty" loading="eager"></a>
	<a href="https://twitter.com/jameswillweb/status/999052022497316865" class="elv-externalexempt elv-possum-anchor" data-investors-avatar>
		<img src="/img/possum-balloon-original-sm.png" class="elv-possum" alt="The possum is Eleventy’s mascot" srcset="/img/possum-balloon-original-sm.png 200w, /img/possum-balloon-original.png 338w" sizes="{% if bigPossum %}37.5vh{% else %}(max-width: 41.875em) 15vw, 6.25rem{% endif %}" loading="lazy">
	</a>
	<h1 class="elv-hed">{{ title | orphanWrap | safe }}</h1>
	<div class="elv-nav-header">
		<ul class="elv-nav lo lo-inline">
			<li class="elv-nav-item lo-c"><a href="{{ "/docs/" | url }}" class="elv-externalexempt nound">{% emoji "📓" %} <span class="und">Docs</span></a></li>
			<li class="elv-nav-item lo-c"><a href="/docs/how-to-support/" class="elv-externalexempt nound">{% emoji "🎁" %} <span class="und">Contribute</span></a></li>
			<li class="elv-nav-item lo-c"><a href="{{ "/docs/search/" | url }}" class="elv-nav-light nound">{% emoji "🔎" %} <span class="und">Search</span></a></li>
			<li class="elv-nav-item elv-nav-social lo-c">
				<div class="lo lo-inline">
					<a href="https://github.com/11ty/eleventy/" class="elv-externalexempt lo-c"><img src="/img/github.svg" class="icon" alt="">GitHub</a>
					<a href="https://twitter.com/eleven_ty" class="elv-externalexempt lo-c"><img src="/img/twitter.svg" class="icon" alt="">Twitter</a>
					<a href="https://twitter.com/zachleat" class="elv-externalexempt lo-c nound">{% avatarlocalcache "twitter", "zachleat" %}<span class="und">zachleat</span></a>
				</div>
			</li>
		</ul>
	</div><!-- /elv-nav-header -->
</header>
