	<h1 class="elv-hed">{{ title | orphanWrap | safe }}</h1>
	<ul class="elv-nav">
{% set latestversion %}{{ pkg.devDependencies["@11ty/eleventy"] | version }}{% endset -%}
		<li class="elv-nav-item"><a href="{{ "/docs/" | url }}">Docs <span class="elv-nav-light">v{{ latestversion }}</span></a></li>
