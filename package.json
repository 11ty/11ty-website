{
  "name": "@11ty/website",
  "version": "1.0.2",
  "description": "The website of 11ty.dev",
  "main": "_site/index.html",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "assets": "cp node_modules/@11ty/logo/logo.png .",
    "check-links": "npx check-html-links _site",
    "links-external": "hyperlink -r --root _site --canonicalroot https://11ty.dev/ --skip '/.netlify/functions' _site/*.html | tap-spot",
    "links-internal": "hyperlink -ri --root _site --canonicalroot https://11ty.dev/ --skip '/.netlify/functions' _site/*.html | tap-spot",
    "deploy": "eleventy && ./deploy.sh",
    "build": "eleventy",
    "start": "eleventy --serve",
    "build-production": "./bundle.sh && node node-avatars-opencollective && ELEVENTY_PRODUCTION=true eleventy",
    "get-new-supporters": "eleventy && node node-supporters",
    "get-new-avatars": "node node-avatars-opencollective && node node-avatars-twitter",
    "format": "prettier --write '**/*.{js,css,html,md}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/11ty/11ty-website.git"
  },
  "author": {
    "name": "Zach Leatherman",
    "email": "zachleatherman@gmail.com",
    "url": "https://zachleat.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/11ty/11ty-website/issues"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/11ty"
  },
  "homepage": "https://github.com/11ty/11ty-website#readme",
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@11ty/dependency-tree": "^2.0.0",
    "@11ty/eleventy": "1.0.0-canary.14",
    "@11ty/eleventy-cache-assets": "^2.1.0",
    "@11ty/eleventy-img": "^0.8.3",
    "@11ty/eleventy-navigation": "^0.2.0",
    "@11ty/eleventy-plugin-rss": "^1.1.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.0",
    "@netlify/functions": "^0.4.1",
    "chrome-aws-lambda": "^8.0.0",
    "clean-css": "4.2.3",
    "comma-number": "2.0.1",
    "dotenv": "8.2.0",
    "fast-glob": "^3.2.5",
    "fs-extra": "9.1.0",
    "html-minifier": "4.0.0",
    "human-readable-numbers": "0.9.5",
    "hyperlink": "4.6.0",
    "luxon": "1.26.0",
    "markdown-it": "8.4.2",
    "markdown-it-anchor": "5.2.5",
    "markdown-it-table-of-contents": "0.4.4",
    "node-fetch": "2.6.1",
    "prettier": "^1.18.2",
    "puppeteer-core": "^8.0.0",
    "semver": "7.3.4",
    "sharp": "0.27.0",
    "short-hash": "^1.0.0",
    "slugify": "1.4.7",
    "sorted-object": "2.0.1",
    "tap-spot": "1.1.1",
    "terser": "4.6.7",
    "twitter-avatar-url": "^2.0.3",
    "url-pattern": "^1.0.3",
    "walker": "^1.0.7"
  },
  "dependencies": {
    "@11ty/logo": "2.0.4",
    "instant.page": "3.0.0",
    "lodash": "^4.17.21",
    "prismjs": "1.23.0",
    "speedlify-score": "^2.0.1"
  }
}
