						{% image "./src/img/mascots/david.svg", "The possum is Eleventy’s mascot", [222], "elv-possum", "", {loading: "eager"} %}
						{%- else %}
						{% image "./src/img/mascots/david.svg", "The possum is Eleventy’s mascot", [222, 350], "elv-possum", "20vh", {loading: "eager"} %}
						{%- endif %}
