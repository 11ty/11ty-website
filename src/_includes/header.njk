<header class="elv-layout elv-layout-full elv-header{% if headerClass %} {{ headerClass }}{% endif %}">
	{%- set bannerLink = bannerlinks | randompick %}
	{%- if bannerLink %}
	<div class="announcement">
{% if bannerLink.url %}
		<a href="{{ bannerLink.url }}">{{ bannerLink.label }}</a>
{% else %}
		<span>{{ bannerLink.label }}</span>
{% endif %}
	</div>
	{%- endif %}

	<div class="elv-header-c">
		<a href="{% if logoLink %}{{ logoLink }}{% else %}/{% endif %}" class="elv-hero elv-externalexempt">{% if logoContent %}{{ logoContent | safe }}{% else %}{% include "../img/logo.svg" %}{% endif %}<span class="sr-only">Eleventy</span></a>
		<a href="/blog/new-mascot-from-geri-coady/" class="elv-externalexempt elv-possum-anchor" data-investors-avatar>
			<div class="elv-possum-pic">
				{% image "./src/img/possum-geri.png", "The possum is Eleventyâ€™s mascot", [222, 350], "elv-possum" %}
			</div>
		</a>
		<{{ headerTag or "h1" }} class="elv-hed">{{ title | orphanWrap | safe }}</{{ headerTag or "h1" }}>
		<div class="elv-nav-header">
			<ul class="list-bare fl fl-inline fl-nowrap fl-separator-h">
				<li><a href="/docs/" class="elv-externalexempt">Docs</a></li>
				<li><a href="/docs/search/">Search</a></li>
				<li><a href="https://github.com/11ty/eleventy/" class="elv-nav-light elv-externalexempt"><b>GitHub</b></a></li>
				<li><a href="https://fosstodon.org/@eleventy" class="elv-nav-light elv-externalexempt"><b>Mastodon</b></a></li>
				<li><a href="/blog/discord/" class="elv-nav-light"><b>Discord</b></a></li>
				<li><a href="/docs/community/">Community</a></li>
				<li><a href="/blog/">Blog</a></li>
				<li><a href="/firehose/" class="elv-nav-light">Firehose</a></li>
			</ul>
		</div>
	</div><!-- /elv-nav-header -->
</header>
