export const data = {
	title: "My Posts",
	pagination: {
		data: "collections.post",
		size: 6,
		alias: "posts",
	},
};

export function render(data) {
	return `<ol>
		${data.posts
			.map(function (post) {
				return `<li><a href="${post.url}">${post.title}</a></li>`;
			})
			.join("")}
	</ol>`;
};
{% endraw %}{% endset %}
