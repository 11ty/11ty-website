---
layout: layouts/base.njk
templateClass: elv-default
headerClass: elv-header-default
---
{% include "header.njk" %}

{% if config.outdated -%}
<div class="elv-callout elv-callout-warn elv-callout-sticky">This is an <strong>older version of Eleventy</strong>. Go to the <a href="https://www.11ty.dev/docs/">newest Eleventy docs</a> (current path: <a href="https://www.11ty.dev{{ page.url }}"><code>{{ page.url }}</code></a>) or the <a href="https://www.11ty.dev/docs/versions/">full release history</a>.</div>
{% endif -%}
{% if config.prerelease -%}
<div class="elv-callout elv-callout-info elv-callout-sticky">This documentation is for an upcoming version of Eleventy. Go to the <a href="https://www.11ty.dev/docs/">latest stable version of Eleventy docs</a> or check out the <a href="https://www.11ty.dev/docs/versions/">full release history.</a></div>
{% endif -%}

<main class="elv-layout{% if layoutClass %} {{ layoutClass }}{% endif %}">
	{{ content | safe }}
</main>

<footer class="elv-footer elv-layout{% if layoutClass %} {{ layoutClass }}{% endif %}">
{% if ignoreSupporters %}{% else %}
	<h2 id="eleventy-is-supported-by">Eleventy is <a href="/docs/supporters/">supported</a> byâ€¦ <a class="direct-link" href="#eleventy-is-supported-by">#</a></h2>
	{% include "supporters.njk" %}
{% endif %}
{%- if ignoreGitHubButtons %}{% else %}
	{% callout %}
		{% include "star-on-github.njk" %}
	{% endcallout %}
{%- endif %}

  {# this permalink: false check can go away in 2.0.0-canary.9 #}
  {% if page.url and page.url.startsWith("/docs/") %}
  {% edge "liquid" %}
  <form-autosubmit>
    <form action="/account/preferences/" method="post" class="formprefs">
      <input type="hidden" name="returnlocation" value="{{ eleventy.edge.path }}">
      <fieldset>
        <legend>Preferred Example Syntax</legend>
        {% assign syntax = eleventy.edge.cookies.syntax | default: "" | escape %}
        <label><input type="radio" name="syntax" value=""{% if syntax == "" %} checked{% endif %}>Default</label>
        <label><input type="radio" name="syntax" value="liquid"{% if syntax == "liquid" %} checked{% endif %}>Liquid</label>
        <label><input type="radio" name="syntax" value="njk"{% if syntax == "njk" %} checked{% endif %}>Nunjucks</label>
        <label><input type="radio" name="syntax" value="js"{% if syntax == "js" %} checked{% endif %}>11ty.js</label>
        <label><input type="radio" name="syntax" value="hbs"{% if syntax == "hbs" %} checked{% endif %}>Handlebars</label>
      </fieldset>
      <button type="submit">Save</button>
    </form>
  </form-autosubmit>
  {% endedge %}
  {% endif %}

	{% include "footer-nav.njk" %}
</footer>
